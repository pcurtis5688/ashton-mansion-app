<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/standardBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:stretchColumns="*"
    tools:context="com.ashtonmansion.ashtonmansioncloverapp.activity.shift.ShiftTemplateManagementActivity">

    <TableRow android:layout_width="match_parent">

        <TextView
            android:id="@+id/shift_template_management_page_header"
            android:layout_width="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_span="3"
            android:text="@string/shift_template_management_header"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_header_size" />
    </TableRow>

    <TableRow>

        <EditText
            android:id="@+id/shift_template_add_code"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/shift_template_add_code_hint_str"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/shift_template_add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/shift_template_add_name_hint_str"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/shift_template_add_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/standardButtonBackground"
            android:onClick="addShiftTemplateRecord"
            android:text="@string/shift_template_add_btn_str"
            android:textAlignment="center"
            android:textColor="@color/standardButtonTextColor"
            android:textStyle="bold" />
    </TableRow>

    <TableRow>

        <TableLayout
            android:id="@+id/shift_template_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_span="3"
            android:background="@color/white"
            android:stretchColumns="*"
            android:textAlignment="center">
            <!--shift template table -->
        </TableLayout>
    </TableRow>
</TableLayout>
