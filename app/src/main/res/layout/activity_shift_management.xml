<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/standardBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:stretchColumns="*"
    tools:context="com.ashtonmansion.ashtonmansioncloverapp.activity.shift.ManagerShiftActivity">

    <TableRow android:layout_width="match_parent">

        <TextView
            android:id="@+id/shift_management_header_tv"
            android:layout_width="fill_parent"
            android:layout_gravity="center_horizontal"
            android:text="@string/shift_management_main_page_header"
            android:textAlignment="center"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/activity_header_size" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/shifts_activity_start_btn"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/standardButtonBackground"
            android:onClick="displayShiftsActivity"
            android:paddingBottom="@dimen/shift_activity_button_padding"
            android:paddingTop="@dimen/shift_activity_button_padding"
            android:text="@string/shifts_activity_start_btn_str"
            android:textAlignment="center"
            android:textColor="@color/standardButtonTextColor" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/shift_template_popup_btn"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/standardButtonBackground"
            android:onClick="displayShiftTemplateActivity"
            android:paddingBottom="@dimen/shift_activity_button_padding"
            android:paddingTop="@dimen/shift_activity_button_padding"
            android:text="@string/shift_template_popup_btn_str"
            android:textAlignment="center"
            android:textColor="@color/standardButtonTextColor" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/shift_exceptions_popup_btn"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/standardButtonBackground"
            android:onClick="displayShiftExceptionActivity"
            android:paddingBottom="@dimen/shift_activity_button_padding"
            android:paddingTop="@dimen/shift_activity_button_padding"
            android:text="@string/shift_exception_popup_btn_str"
            android:textAlignment="center"
            android:textColor="@color/standardButtonTextColor" />
    </TableRow>
</TableLayout>
