<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/standardBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:stretchColumns="*"
    tools:context="com.ashtonmansion.ashtonmansioncloverapp.activity.management.ManagerMainActivity">

    <TableRow android:layout_width="match_parent">

        <TextView
            android:id="@+id/manager_main_header"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:text="@string/manager_main_page_header"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_header_size" />
    </TableRow>

    <Button
        android:id="@+id/schedule_employee_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_span="2"
        android:background="@color/standardButtonBackground"
        android:onClick="showShiftManagementPage"
        android:paddingBottom="@dimen/main_btn_vertical_margin"
        android:paddingTop="@dimen/main_btn_vertical_margin"
        android:text="@string/schedule_employee_btn_str"
        android:textColor="@color/standardButtonTextColor" />
</TableLayout>
