<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:stretchColumns="*"
    tools:context="com.ashtonmansion.ashtonmansionapp.activity.CustomersActivity">

    <TableRow
        android:layout_width="fill_parent"
        android:textAlignment="center">

        <TextView
            android:id="@+id/customer_page_header"
            android:layout_width="fill_parent"
            android:text="@string/customer_page_header_label_str"
            android:textSize="@dimen/activity_header_size" />

    </TableRow>

    <TableRow android:layout_width="fill_parent">

        <Button
            android:id="@+id/add_customer_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="displayAddCustomer"
            android:paddingBottom="@dimen/main_btn_vertical_margin"
            android:paddingTop="@dimen/main_btn_vertical_margin"
            android:text="@string/add_customer_btn_string" />
    </TableRow>

    <TableRow>

        <TableLayout android:id="@+id/customer_table" />
    </TableRow>

</TableLayout>
