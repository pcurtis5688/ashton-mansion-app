<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:stretchColumns="*"
    tools:context=".activity.customer.EditCustomerActivity">

    <TableRow>

        <TextView
            android:id="@+id/id_edit_customer_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:text="@string/add_customer_header_str"
            android:textAlignment="center" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/customer_first_name_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_first_name_prompt_str" />

        <EditText
            android:id="@+id/customer_first_name_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="30" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/customer_last_name_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_last_name_prompt_str" />

        <EditText
            android:id="@+id/customer_last_name_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLength="30" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/customer_marketing_allowed_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_marketing_allowed_prompt_str" />

        <CheckBox
            android:id="@+id/customer_marketing_allowed_chkbox_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/customer_phone_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_phone_prompt_str" />

        <EditText
            android:id="@+id/customer_phone_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="10" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/customer_email_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_email_prompt_str" />

        <EditText
            android:id="@+id/customer_email_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textWebEmailAddress" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/customer_address_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_address_prompt_str" />

        <EditText
            android:id="@+id/customer_address_1_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:gravity="end">

        <EditText
            android:id="@+id/customer_address_2_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow android:gravity="end">

        <EditText
            android:id="@+id/customer_address_3_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/customer_city_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_city_prompt_str" />

        <EditText
            android:id="@+id/customer_city_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/customer_state_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_state_prompt_str" />

        <Spinner
            android:id="@+id/customer_state_spinner_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/state_array" />
    </TableRow>

    <TableRow android:paddingBottom="@dimen/main_btn_vertical_margin">

        <TextView
            android:id="@+id/customer_zip_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_zip_prompt_str" />

        <EditText
            android:id="@+id/customer_zip_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="5" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/cancel_add_customer_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="cancelEditCustomer"
            android:text="@string/edit_customer_cancel_btn_str" />

        <Button
            android:id="@+id/save_edit_customer_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="submitAddCustomer"
            android:text="@string/save_edit_customer_btn_str" />
    </TableRow>
</TableLayout>