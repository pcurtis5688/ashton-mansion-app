<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ashtonmansion.ashtonmansionapp">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AppointmentsActivity"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AddAppointmentActivity"
            android:parentActivityName=".activity.AppointmentsActivity" />
        <activity
            android:name=".activity.SettingsActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.CustomersActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.InventoryActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.EmployeesActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.AddEmployeeActivity"
            android:parentActivityName=".activity.EmployeesActivity" />
        <activity
            android:name=".activity.AddCustomerActivity"
            android:parentActivityName=".activity.CustomersActivity" />
        <activity
            android:name=".activity.AddInventoryActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.AppointmentDetailActivity"></activity>
    </application>

</manifest>